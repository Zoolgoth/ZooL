import java.util.Scanner;

public class Przedszkolanka {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);
        System.out.println("Ile jest osob w grupie 1: ");
        int grupa1 = scanner.nextInt();
        System.out.println("Ile jest osob w grupie 2: ");
        int grupa2 = scanner.nextInt();
        int cukierki=grupa1*grupa2;

            System.out.println(cukierki);
        System.out.println("Liczba cukierkow dla kazdego ucznia w gr1: "+ cukierki/grupa1);
        System.out.println("Liczba cukierkow dla kazdego ucznia w gr2: "+ cukierki/grupa2);
        }
    }
